<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:background="@drawable/round_stroke"
    tools:context=".HistoryDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:background="@color/applicationColor"
            android:src="@drawable/bclogotw" />

        <TextView
            android:id="@+id/pharmacy_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textColor="@color/applicationColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/pharmacy_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pharmacy_name"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textColor="#C61824"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/motaheda_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pharmacy_code"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textColor="#C61824"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/pharmacy_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/motaheda_code"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textColor="@color/applicationColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/pharmacy_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pharmacy_address"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textColor="@color/applicationColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/pharmacy_tele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pharmacy_phone"
            android:layout_margin="4dp"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/applicationColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/pharmacy_branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pharmacy_tele"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textColor="@color/applicationColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/pharmacy_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pharmacy_branch"
            android:layout_margin="4dp"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/applicationColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/pharmacy_subscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pharmacy_goal"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textColor="@color/applicationColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/pharmacy_contact_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pharmacy_subscription"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textColor="@color/applicationColor"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/visit_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pharmacy_contact_type"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textColor="@color/applicationColor"
            android:textSize="24sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/visit_date"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textColor="@color/applicationColor"
            android:textSize="24sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pharmacy_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment"
            android:layout_margin="4dp"
            android:gravity="center"
            android:textColor="@color/applicationColor"
            android:textSize="24sp" />

    </RelativeLayout>
</ScrollView>

