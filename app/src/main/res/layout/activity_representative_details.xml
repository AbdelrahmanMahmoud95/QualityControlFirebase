<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".RepresentativeDetailsActivity">

    <TextView
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/total_not_visit"
        android:layout_margin="6dp"
        android:background="@drawable/round_stroke"
        android:gravity="center"
        android:padding="6dp"
        android:textColor="@color/applicationColor"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/total_not_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="6dp"
        android:background="@drawable/round_stroke"
        android:gravity="center"
        android:padding="6dp"
        android:textColor="@color/applicationColor"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/total_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_not_visit"
        android:layout_margin="6dp"
        android:background="@drawable/round_stroke"
        android:gravity="center"
        android:padding="6dp"
        android:textColor="@color/applicationColor"
        android:textSize="22sp" />

    <Button
        android:id="@+id/visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_visit"
        android:layout_margin="6dp"
        android:background="@color/applicationColor"
        android:gravity="center"
        android:text="عرض تفاصيل"
        android:padding="6dp"
        android:textColor="#fff"
        android:textSize="22sp" />
</RelativeLayout>